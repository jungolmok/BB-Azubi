{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress â€“ Jungolmok with Bedrock",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Jun",
      "email": "jun@jungolmok.com",
      "homepage": "https://jungolmok.com/"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/twentytwentyone"]
    },
    {
      "type":"package",
      "package":{
         "name":"advanced-custom-fields/advanced-custom-fields-pro",
         "version":"5.9.3",
         "type":"wordpress-plugin",
         "dist":{
            "type":"zip",
            "url":"https://connect.advancedcustomfields.com/index.php?p=pro&a=download&k=b3JkZXJfaWQ9Nzg5ODN8dHlwZT1kZXZlbG9wZXJ8ZGF0ZT0yMDE2LTA0LTA2IDA5OjA1OjA2"
         }
      }
   }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.11",
    "vlucas/phpdotenv": "^5.3",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "5.9",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "advanced-custom-fields/advanced-custom-fields-pro":"*",
    "wpackagist-plugin/wp-migrate-db":"2.2.2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.6.0",
    "roave/security-advisories": "dev-master"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\"",
      "composer run remove-old-wp-themes"
    ],
    "post-update-cmd": [
      "composer run remove-old-wp-themes"
    ],
    "remove-old-wp-themes": [
      "rm -rf web/wp/wp-content/themes/twenty*"
    ],
    "test": [
      "phpcs"
    ]
  }
}
